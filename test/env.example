# Example environment for shim tests
# Copy to env.txt and:  source env.txt

# Required for live tests
export SHIM_TEST_BASE_URL="https://mail.example.com"  
export SHIM_TEST_USER="user@example.com"
export SHIM_TEST_PASSWORD="app_or_primary_password"

# Optional: wrong password used for AutoDiscover negative test (defaults to "wrong")
export SHIM_TEST_PASSWORD_BAD="wrong_password_here"

# Optional: preauth token issuance (used by make get-token-preauth)
# Obtain the hex key from:  su - zimbra -c 'zmprov gdpak your-domain.com'
export SHIM_TEST_PREAUTH_KEY="<hex-preauth-key>"

# Optional: override TLS verification in rest harness
# 1 (true) / 0 (false). For labs with self-signed certs, set 0.
export SHIM_TEST_VERIFY_TLS=0

# After editing:  source env.txt
